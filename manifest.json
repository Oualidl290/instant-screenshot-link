
{
  "manifest_version": 3,
  "name": "ScreenSnap - Capture & Share",
  "description": "Instantly capture, upload and share screenshots with anyone.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "clipboardWrite"]
}
